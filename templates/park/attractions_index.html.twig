{% extends 'base.html.twig' %}

{% block title %}Nos Attractions{% endblock %}

{% block body %}
<div class="container">
<h1>Nos attractions</h1>
    <div class="col-md-10">
        <div class="row">
        {% for attraction in attractions %}
            <div class="col-md-4 attraction-container">
                <div class="attraction-item text-center">
                    <a href="{{ path('show',{ 'slug' : attraction.slug }) }}"> <img src="/uploads/{{attraction.image}}" alt="{{attraction.title}}" class="img-fluid" /> </a>
                    <h5>{{ attraction.title }}</h5>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
